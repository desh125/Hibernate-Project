<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainPane" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17">
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <Label text="Student Registration"/>
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <children>
                    <Label text="Name:"/>
                    <TextField fx:id="nameField" GridPane.columnIndex="1"/>
                    <Label text="Campus ID:" GridPane.rowIndex="1"/>
                    <TextField fx:id="campusIdField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                </children>
            </GridPane>
            <Button fx:id="saveButton" text="Save"/>
        </VBox>
    </center>
</BorderPane>
