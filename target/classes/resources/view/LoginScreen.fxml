<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" prefHeight="365.0" prefWidth="558.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="lk.ijse.orm.hibernate_project.controllers.LoginController">

    <children>
        <Label layoutX="370.0" layoutY="70.0" text="Login">
            <font>
                <Font name="Lucida Console" size="18.0"/>
            </font>
        </Label>
        <Label layoutX="311.0" layoutY="122.0" text="Username:"/>
        <TextField fx:id="usernameField" layoutX="311.0" layoutY="146.0" prefHeight="27.0" prefWidth="181.0"/>
        <Label layoutX="311.0" layoutY="183.0" text="Password:"/>
        <PasswordField fx:id="passwordField" layoutX="311.0" layoutY="205.0" prefHeight="27.0" prefWidth="181.0"/>
        <Button fx:id="loginButton" layoutX="356.0" layoutY="282.0" mnemonicParsing="false" onAction="#btnClickOnAction"
                prefHeight="25.0" prefWidth="83.0" style="-fx-background-color: lightblue;" text="Login"/>
        <AnchorPane layoutX="-2.0" prefHeight="366.0" prefWidth="257.0">
            <children>
                <ImageView fitHeight="366.0" fitWidth="264.0" layoutX="-2.0" pickOnBounds="true">
                    <image>
                        <Image url="@/img/LoginV.png"/>
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
        <Label layoutX="419.0" layoutY="246.0" onMouseClicked="#resetPasswordOnAction" text="Reset Password?">
            <font>
                <Font size="10.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Label>

    </children>
</AnchorPane>
